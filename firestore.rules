rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /counters/main_counter {
      // Allow anyone to read the global counter.
      allow get: if true;
      // Allow any authenticated user to create or update the counter.
      allow write: if request.auth != null;
    }

    // Default deny for all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}